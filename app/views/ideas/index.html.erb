<div class="container">
  <div class="row">

    <div class="col-sm-10">

      <div class="col-md-2">
        <h3>這邊要放tags</h3>
      </div>

      <div class="col-md-10">

        <table class="table table-hover">

          <h3>
            Ideas List
            <span class="pull-right">
              <%= link_to new_idea_path do %>
                <i class="fa fa-plus-square fa-lg" aria-hidden="true"></i>
              <% end %>
            </span>
          </h3>

          <tbody>
            <% @ideas.each do |idea| %>
              <tr>
                <td class="col-md-2">

                  <div class="fav-icon">

                    <% if current_user %>
                      <% if !current_user.favorite_ideas.exists?(id: idea.id) %>
                        <%= link_to favorite_ideas_path(idea_id: idea), method: :post do %>
                          <i class="fa fa-heart-o fa-lg" aria-hidden="true"></i>
                        <% end %>
                      <% else %>
                        <%= link_to favorite_idea_path(idea), method: :delete do %>
                          <i class="fa fa-heart fa-lg" aria-hidden="true"></i>
                        <% end %>
                      <% end %>
                    <% end %>
                    <%= idea.fans.count %>
                    <div>
                      <i class="fa fa-comment-o fa-lg" aria-hidden="true"></i>
                      <a href="<%= url_for([idea, {only_path: false}]) %>#disqus_thread"></a>
                    </div>
                  </div>

                </td>

                <td class="col-md-10">
                  <h4><%= link_to idea.title, idea_path(idea) %></h4>
                  <p><%= idea.description %></p>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>

    </div>

    <div class="col-sm-3">
    </div>

  </div>
</div>

<hr>
<%= render "structure/footer" %>
